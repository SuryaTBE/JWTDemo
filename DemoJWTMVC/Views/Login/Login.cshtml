@model DemoJWTMVC.Models.UserTbl
@{
    ViewData["Title"] = "Login";
}
@if (ViewBag.errormessage!=null)
{
    <div class="text-danger">
        @ViewBag.errormessage
    </div>
}
<h1>Login</h1>

<h4>User Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="mail" class="control-label"></label>
                <input asp-for="mail" type="email" class="form-control" />
                <span asp-validation-for="mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input asp-for="password" type="password" class="form-control" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <label asp-for="CPassword" class="control-label"></label>
            <input asp-for="CPassword" type="password" class="form-control" />
            <span asp-validation-for="CPassword" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}